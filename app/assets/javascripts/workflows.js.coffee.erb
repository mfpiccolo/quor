ready = ->
  model_type = $("#workflow_model_otype").val()
  model_types = $("#models").data().models
  $("#workflow_model_otype").select2
    tags: model_types
    maximumSelectionSize: 1
    multiple: true
    formatResult: format_model
    formatSelection: format_model
    escapeMarkup: (m) ->
      m
    formatSelectionCssClass: (data, container) ->
      "silver-flat-button"
    width: "resolve"

  if $("#workflow_model_otype").val().length
    populateSelects()

  $("#s2id_workflow_model_otype").focusout ->
    populateSelects()

  trigger_functions   = ["changes_to"]
  condition_functions = ["=", "!=", "<=", ">=", "<", ">"]
  action_functions    = ["change_to", "email"]

  $("#workflow_trigger_function").select2
    maximumSelectionSize: 1
    tags: trigger_functions
    formatResult: format_function
    formatSelection: format_function
    escapeMarkup: (m) ->
      m
    formatSelectionCssClass: (data, container) ->
      "silver-flat-button"
    width: "resolve"

  $("#workflow_condition_function").select2
    maximumSelectionSize: 1
    tags: condition_functions
    formatResult: format_function
    formatSelection: format_function
    escapeMarkup: (m) ->
      m
    formatSelectionCssClass: (data, container) ->
      "silver-flat-button"
    width: "resolve"

  $("#workflow_action_function").select2
    maximumSelectionSize: 1
    tags: action_functions
    formatResult: format_function
    formatSelection: format_function
    escapeMarkup: (m) ->
      m
    formatSelectionCssClass: (data, container) ->
      "silver-flat-button"
    width: "resolve"

$(document).on('page:load', ready);
$(document).ready ready

populateSelects = ->
  $.ajax
    dataType: "json"
    type: "GET"
    url: "/models/attributes"
    data:
      model_name: $("#workflow_model_otype").val()
    success: (data) ->
      select2_ary = [];

      select2_ary.push({
        text: 'Attributes',
        children: []
      });

      $.each data["attributes"], (index, name) ->
        select2_ary[0]["children"].push({
            id: name,
            text: name
        })

      # Possibly add these function to be used before associations
      # select2_ary.push({
      #   text: 'Association Operations',
      #   children: [
      #     {
      #       id: "all",
      #       text: "all"
      #     }
      #   ]
      # });

      if data["parent_scopes"].length
        select2_ary.push({
          text: 'Parents',
          children: []
        });

        $.each data["parent_scopes"], (index, name) ->
          select2_ary[select2_ary.length - 1]["children"].push({
              id: name,
              text: name
          })

      if data["child_scopes"].length
        select2_ary.push({
          text: 'Children',
          children: []
        });

        $.each data["child_scopes"], (index, name) ->
          select2_ary[select2_ary.length - 1]["children"].push({
              id: name,
              text: name
          })

      $("#workflow_trigger_subject").select2
        tags: select2_ary
        maximumSelectionSize: 2
        formatResult: format_subject
        formatSelection: format_subject
        escapeMarkup: (m) ->
          m
        formatSelectionCssClass: (data, container) ->
          "silver-flat-button"
        width: "resolve"

      $("#workflow_condition_subject").select2
        tags: select2_ary
        maximumSelectionSize: 2
        formatResult: format_subject
        formatSelection: format_subject
        escapeMarkup: (m) ->
          m
        formatSelectionCssClass: (data, container) ->
          "silver-flat-button"
        width: "resolve"

      $("#workflow_action_subject").select2
        tags: select2_ary
        maximumSelectionSize: 2
        formatResult: format_subject
        formatSelection: format_subject
        escapeMarkup: (m) ->
          m
        formatSelectionCssClass: (data, container) ->
          "silver-flat-button"
        width: "resolve"

