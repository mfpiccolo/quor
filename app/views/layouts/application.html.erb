<!DOCTYPE html>
<html>
<head>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <title>Quor</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body data-ember-extension="1">
    <div class="row full-width wrapper">
        <div class="large-12 columns content-bg">
            <section id="top-menu">
                <div class="row">
                    <div class="large-2 medium-4 small-12 columns top-part-no-padding">
                        <div class="logo-bg">
                            <%= image_tag("intrinsic.png", class: "logo") %>
                        </div>
                    </div>
                    <div class="large-10 medium-8 small-12 columns top-menu">
                        <div class="row">
                            <div class="large-6 medium-6 small-12 columns">
                                <div class="row">
                                    <div class="large-8 columns">
                                        <input id="Text1" type="text" class="search-text" placeholder="Search">
                                    </div>
                                </div>
                            </div>
                            <div class="large-4 medium-6 small-12 columns text-center">
                                <div class="row">
                                    <div class="medium-3 small-3 columns">
                                        <div class="notification">
                                            <%= fa_icon("globe", text: "", class: "fa-globe") %>
                                            <span class="mail">4</span>
                                        </div>
                                    </div>
                                    <div class="medium-3 small-3 columns">
                                        <div class="notification">
                                            <%= fa_icon("mail", text: "", class: "fa-inbox") %>
                                            <span class="megaphone">5</span>
                                        </div>
                                    </div>
                                    <div class="medium-3 small-3 columns">
                                        <%= image_tag("profile_img.png", class: "top-bar-picture") %>
                                    </div>
                                    <div class="medium-3 small-3 columns">
                                        <%= link_to destroy_user_session_path, method: :delete do %>
                                            <%= fa_icon("mail", text: "", class: " fa-sign-out fa-2x power-off") %>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </section>
            <%= link_to "#panel1c", class: "left-off-canvas-toggle" do %>
                <%= fa_icon("forms", text: "", class: "fa-bars fa-2x") %>
            <% end %>
            <div class="off-canvas-wrap" data-offcanvas>
                <div class="inner-wrap">
                    <aside class="left-off-canvas-menu">
                        <div class="row">
                            <div class="no-padding">
                                <div class="large-12 medium-12 small-12 columns">
                                    <ul class="side-nav">
                                        <li>
                                            <%= link_to root_path do %>
                                              <%= fa_icon("sign-out", text: "Dashboard", class: "fa-dashboard fa-2x") %>
                                            <% end %>
                                        </li>
                                        <li>
                                          <%= link_to models_path do %>
                                            <%= fa_icon("models", text: "Models", class: "fa-cubes fa-2x") %>
                                          <% end %>
                                        </li>
                                        <li>
                                            <ul>
                                                <li>
                                                    <dl class="accordion" data-accordion="myAccordionGroup">
                                                        <dd>
                                                            <%= link_to "#panel1c" do %>
                                                                <%= fa_icon("forms", text: "Forms", class: "fa-file-text fa-2x") %>
                                                            <% end %>
                                                            <div id="panel1c" class="content">
                                                                <ul>
                                                                    <li>
                                                                        <a href="general.html">General</a>
                                                                    </li>
                                                                    <li>
                                                                        <a href="wizard.html">Wizard</a>
                                                                    </li>
                                                                    <li>
                                                                        <a href="editor.html">Wysiwug Editor</a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </dd>
                                                    </dl>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </aside>
                    <div class="large-12 medium-12 small-12 columns light-grey-bg-pattern">
                        <br>
                        <div class="row">
                            <div class="large-10 columns">
                                <div class="page-name">
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                        <section id="dashboard">
                          <%= yield %>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</html>
