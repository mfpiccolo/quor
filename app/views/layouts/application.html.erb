                    <div class="row">
                        <div class="large-10 columns">
                            <div class="page-name">
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                    <section id="dashboard">
                      <%= yield %>
                    </section>
                </div>
            </div>
