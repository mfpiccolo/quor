<h1><%= @mapping.otype %> Mapping</h1>

<div id="table-wrapper">
  <div id="table-scroll">
    <table class="table">
      <tr>
        <th>Attribute</th>
        <th>Type</th>
      </tr>
      <% @type_mappings.each_pair do |k,v| %>
        <tr>
          <td><%= k %></td>
          <td><%= v %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
